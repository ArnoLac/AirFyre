


<div class="container">

  <div class="container mt-5">
    <h1><%= @dj_profile.stage_name %></h1>
    <h3><%= @dj_profile.genre.join %></h3>
    <p><%= @dj_profile.bio.capitalize %></p>

    <div>
    <%= link_to "Go Back Home", root_path %>
    </div>
    <div>
      <%= link_to "Book the Artist", new_booking_path  %>
    </div>


    <!-- We need to show all past bookings before validation -->
    <div>
      <% @bookings.each do |booking| %>
        <% if booking.dj_profile_id == @dj_profile.id %>
          <tr>
            <td><%= booking.name %></td>
            <td><%= booking.location %></td>
            <td><%= booking.date %></td>
          </tr>
        <% end %>
      <% end %>
    </div>

    <%= render 'bookings/form' %>

    <div class="footer">
      <div class="footer-links">
        <a href="#"><i class="fab fa-facebook"></i></a>
      </div>
    </div>
  </div>

</div>
