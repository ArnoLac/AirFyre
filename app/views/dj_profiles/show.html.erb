<div class="container">

  <div class="container mt-5">
    <h1><%= @dj_profile.stage_name %></h1>
    <h3><%= @dj_profile.genre.join(', ').capitalize %></h3>
    <p><%= @dj_profile.bio.capitalize %></p>

    <div>
    <%= link_to "Go Back Home", root_path %>
    </div>
    <div>
      <%= link_to "Book the Artist", new_booking_path  %>
    </div>
    <div>
      <p>
        Past Bookings
      </p>
    </div>

    <div class="footer">
      <div class="footer-links">
        <a href="#"><i class="fab fa-facebook"></i></a>
      </div>
    </div>

    <div class="dj-reviews">
      <% @dj_profile.reviews.each do |review| %>
        <p><%= review.comment %><p>
      <% end %>
    </div>
  </div>

</div>
