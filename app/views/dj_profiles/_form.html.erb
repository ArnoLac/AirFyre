<div class="container">
  <%= simple_form_for(@dj_profile) do |b| %>
    <%= b.error_notification %>
    <%= b.error_notification message: b.object.errors[:base].to_sentence if b.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= b.input :stage_name %>
      <%= b.input :bio %>
      <%= b.input :genres, collection: DjProfile::GENRES %>
      <%= b.input :social_media, label: "Your Soundcloud"%>
    </div>





    <div class="form-actions">
      <%= b.button :submit %>
    </div>
  <% end %>
</div>
