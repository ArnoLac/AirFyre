<div class="d-flex justify-content-center">
  <h2>Log in</h2>
</div>

<div class="d-flex justify-content-center" id="admin-container">
  <div class="col-sm-6 col-lg-4" id="admin-form">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="d-flex justify-content-around">

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn-ghost-orange" %>
        </div>

      </div>

      <div class="d-flex justify-content-around" style= "margin-top: 20px">

        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn-ghost" %>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "btn-ghost-platinium" %>

      </div>
    <% end %>
  </div>
</div>
